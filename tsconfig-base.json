{
  "extends": [],

  "include": [],
  "exclude": [],
  "references": [],

  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./bin",
    "tsBuildInfoFile": "./bin/.tsbuildinfo",

    /* Compilation */
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,

    /* Linting */
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
